@model WebShop.ViewModels.HomeViewModel

<h2>Create Category</h2>

<form asp-action="Create" method="post">
    @if (Model.Categories != null && Model.Categories.Any())
    {
        <div class="form-group">
            <input type="hidden" asp-for="Categories.FirstOrDefault().Id" />
            <label asp-for="Categories.FirstOrDefault().Name"></label>
            <input asp-for="Categories.FirstOrDefault().Name" class="form-control" />
            <span asp-validation-for="Categories.FirstOrDefault().Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Categories.FirstOrDefault().Description"></label>
            <input asp-for="Categories.FirstOrDefault().Description" class="form-control" />
            <span asp-validation-for="Categories.FirstOrDefault().Description" class="text-danger"></span>

        </div>
    }

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>

</form>
