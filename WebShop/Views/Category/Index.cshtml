@model List<WebShop.Models.Category>

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div>
    <h1>Category List</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
        </tbody>
    </table>
</div>