@model List<WebShop.Models.Category>

<h2>Categories</h2>

<ul>
    @foreach (var category in Model)
    {
        <li>
            <a asp-controller="Category" asp-action="Index" asp-route-categoryId="@category.Id">
                @category.Name
            </a>
        </li>
    }
</ul>



