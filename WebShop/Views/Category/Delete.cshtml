@model WebShop.ViewModels.HomeViewModel

<h2>Delete Category</h2>

<form asp-action="Delete" method="post">
    @foreach (var category in Model.Categories)
    {
        <h1>Are you sure you want to delete this Category and all of it's product's'?</h1>

        <input type="hidden" asp-for="Categories[0].Id" />
        <div class="col-md-4 mt-4">
            <div class="card">
                <div class="card-body">
                <h2 class="card-title">Category Name: @category.Name </h2>
                <br />
                    <h3 class="card-text">Category Id: $@category.Id</h3>
                    <br />
                    <p class="card-text">Description: $@category.Description</p>
                </div>
            </div>
        </div>

        <div class="row mt-4" style="margin: 2rem;">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4 mt-4">
                @if (product.CategoryId == Model.Categories.First().Id)
                {
                    <div class="card" style="max-height: 400px">
                        <img src="@product.PictureUrl" class="card-img-top" alt="Product Image" style="max-height: 200px;">
                        <div class="card-body">
                            <h5 class="card-title">Product Name: @product.Name <br/> Id: @product.Id</h5>
                            <p class="card-text">Price: $@product.Price</p>
                            <br />
                            <p class="card-text">Description: $@product.Description</p>
                        </div>
                    </div>
                }
            </div>
        }
        </div>






    }
    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
    </div>

</form>