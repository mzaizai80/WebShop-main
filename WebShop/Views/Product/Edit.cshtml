@model WebShop.ViewModels.HomeViewModel

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Categories" />

    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="form-group">
            <input type="hidden" asp-for="Products[0].Id" />
            <label asp-for="Products[0].Name"></label>
            <input asp-for="Products[0].Name" class="form-control" />
            <span asp-validation-for="Products[0].Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Products[0].Price"></label>
            <input asp-for="Products[0].Price" class="form-control" />
            <span asp-validation-for="Products[0].Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Products[0].PictureUrl"></label>
            <input asp-for="Products[0].PictureUrl" class="form-control" />
            <span asp-validation-for="Products[0].PictureUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Products[0].Description"></label>
            <textarea asp-for="Products[0].Description" class="form-control"></textarea>
            <span asp-validation-for="Products[0].Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Products[0].CategoryId"></label>
            <select asp-for="Products[0].CategoryId"
                    asp-items="@(new SelectList(Model.Categories, "Id", "Name", Model.Products[0].CategoryId))"
                    class="form-control">
                <option value="">Select a Category</option>
            </select>
            <span asp-validation-for="Products[0].CategoryId" class="text-danger"></span>
        </div>

        <br />
    }
    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>




















