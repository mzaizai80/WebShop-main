@model WebShop.ViewModels.HomeViewModel

<h2>Delete Product</h2>

<form asp-action="Delete" method="post">
    @foreach (var product in Model.Products)
    {
        <h1>Are you sure you want to delete this product?</h1>

        <input type="hidden" asp-for="Products[0].Id" />
        <div class="col-md-4 mt-4">
            <div class="card">
                <img src="@product.PictureUrl" class="card-img-top" alt="Product Image">
                <div class="card-body">

                    <h5 class="card-title text-truncate overflow-hidden">@product.Name</h5>

                    <p class="card-text">Price : @product.Price</p>

                    <p class="card-text text-truncate overflow-hidden">Description: @product.Description</p>

                </div>
            </div>
        </div>
    }
    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
