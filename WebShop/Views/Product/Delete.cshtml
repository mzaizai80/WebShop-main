@model WebShop.ViewModels.HomeViewModel

<h2>Delete Product</h2>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="@Model.Products.FirstOrDefault().Id" />

    <div class="form-group">
        <p>Are you sure you want to delete this product?</p>
        <strong>Name:</strong> @Model.Products.FirstOrDefault().Name <br />
        <strong>Price:</strong> @Model.Products.FirstOrDefault().Price <br />
        <strong>Discription:</strong> @Model.Products.FirstOrDefault().Product_Discription <br />
        <strong>Image:</strong> @Model.Products.FirstOrDefault().PictureUrl<br />
    </div>
    <br />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
